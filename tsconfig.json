{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["index.ts", "react/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
